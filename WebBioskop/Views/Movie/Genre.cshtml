@model WebBioskop.Models.Collection
@foreach (var item in Model.Genres)
{
    if (ViewBag.id == item.id)
    {

        <h1 class="text-white">@item.name movies</h1>
    }
}
<hr style="border-color:white;" />

<br />

<div class="container-fluid">
    <div class="grid-container">
        @foreach (var item in Model.Movies)
        {
        <a href="/Movie/Review/@item.movieId" style="text-decoration:none;">
            <div class="bg-dark d-inline-block" style="width:190px;height:370px;border-radius:8px;margin-left:7px;margin-top:7px;">

                <div style="width:180px;height:220px;padding:15px;margin-left:4px;">
                    <img id="kartica" class="card-img-top" style="height:200px;" src="https://image.tmdb.org/t/p/w185/@Html.DisplayFor(model=>item.poster_path)" />
                </div>
                <div style="width:180px;height:60px;padding-top:5px;font-weight:bold;">
                    <p style="color:white;text-align:center;">@Html.DisplayFor(model => item.title) (@Html.DisplayFor(model => item.release_date.Year))</p>
                </div>
                <div style="width:180px;height:80px; padding-left:20px;">
                    <p style="color:white;text-align:left;"><i class="fa fa-star" style="color:yellow; margin-right:3px;" aria-hidden="true"></i>@Html.DisplayFor(model => item.vote_average)/10 (@Html.DisplayFor(model => item.vote_count))</p>
                    <hr />
                    <p style="color:white;text-align:left;padding-right:20px;"></p>
                </div>
            </div>
        </a>

        }

    </div>

    <br />
    <hr style="border-color:white;" />
    <br />

</div>