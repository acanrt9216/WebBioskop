@model WebBioskop.Models.Collection

<div class="container-fluid">
    @foreach (var item in Model.Series)
    {

    <div class="container text-white">
        <div class="row">
            <div class="col-4" style="margin-top:15px;">
                <div>
                    <img class="card-img-top" style="width:280px;height:400px;border: 4px solid orange;border-radius:25px;" src="https://image.tmdb.org/t/p/w185/@Html.DisplayFor(model => item.backdrop_path)" />
                </div>
            </div>
            <div class="col-7">
                <div>
                    <h1>@Html.DisplayFor(model => item.name) (@Html.DisplayFor(model => item.first_air_date.Year))</h1>
                    <hr style="border-color:orange;" />
                    <br />

                    <div style="text-align:left;">
                        <div style="display:inline-block;color:darkorange;">
                            <p class="text-warning">Genres: </p>
                        </div>
                        @{string[] s = item.genre_ids.Split(',');}
                        @{foreach (var i in s)
                            {
                                foreach (var ge in Model.Genres)
                                {
                                    if (Int32.Parse(i) == ge.id)
                                    {
                                        <div id="genreBadges" class="badge-warning">@Html.DisplayFor(model => ge.name)</div>
                                    }
                                }
                            } }

                    </div>

                    <div>
                        <span class="text-warning" style="color:darkorange;padding-right:7px;">Rating: </span>
                        <span>@Html.DisplayFor(model => item.vote_average)</span>
                        <span class="text-warning" style="color:darkorange;padding-right:7px;padding-left:7px;">Votes: </span>
                        <span>@Html.DisplayFor(model => item.vote_count)</span>
                        <span style="color:darkgray;font-size:1.5em;margin-left:5px;"> | </span>
                        <span class="text-warning" style="color:darkorange;padding-right:7px;padding-left:7px;">Language: </span>
                        <span>@Html.DisplayFor(model => item.original_language)</span>
                        <span style="color:darkgray;font-size:1.5em;margin-left:5px;"> | </span>
                        <span class="text-warning" style="padding-right:7px;padding-left:7px;">Popularity: </span>
                        <span>@Html.DisplayFor(model => item.popularity)</span>

                    </div>
                    
                    <div>
                        <span class="text-warning">Description:</span>
                    </div>
                    <div  style="border: 2px solid;border-color:white;padding:10px;margin-top:15px;border-radius:8px;border-color:orange;">
                        <p>@Html.DisplayFor(model => item.overview)</p>
                    </div>
                </div>
            </div>
            <div class="col-1">

            </div>
        </div>

        @*<div class="row">
            <div class="col-4"><img src="https://image.tmdb.org/t/p/w185/rQaHA74pevnGsxcKGaoZVGWe9TC.jpg" /></div>
            <div class="col-4"><img src="https://image.tmdb.org/t/p/w185/ijnaE8IU7XC5kA8uZbTxq6SmSnH.jpg" /></div>
            <div class="col-4"><img src="https://image.tmdb.org/t/p/w185/4JNggqfyJWREqb0enzpUMbvIniV.jpg" /></div>

        </div>*@
        <br />
        <hr style="border-color:white;" />
        <div class="container" style="text-align:center;">
            <video style="width:800px;height:600px;border:3px solid;border-color:orange; border-radius:5px;" controls>
                <source src="" type="video/mp4">
            </video>
        </div>
    </div>

    }

</div>