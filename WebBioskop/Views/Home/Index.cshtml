<div class="container-fluid mt-2">
    <h2 style="font-weight:bold;color:white;">Popular movies</h2>
    <br />

    <div class="row wrapper" style="overflow-x:scroll;white-space:nowrap; padding-bottom:5px;">
        <div class="col-2">

            @foreach (var item in Model.Movies)
            {
                @if (item.type == "popular")
                {
            <a href="/Movie/Review/@item.movieId" style="text-decoration:none;">
                <div class="bg-dark d-inline-block" style="width:200px;height:347px; border-radius: 5px;">
                    <div>
                        <div style="padding:10px;">
                            <img id="kartica" class="card-img-top img-thumbnail" style="height:200px;" src="https://image.tmdb.org/t/p/w185/@Html.DisplayFor(model=>item.poster_path)" />
                        </div>
                    </div>
                    <div style="padding-left:15px;width:180px;height:60px;" class="text-wrap">
                        <p class="text-white">@Html.DisplayFor(model => item.title) (@Html.DisplayFor(model => item.release_date.Year))</p>
                    </div>
                    <hr style="background-color:black;width:85%;" />
                    <div style="padding-left:15px;">
                        <p style="color:white;justify-content:start;">@Html.DisplayFor(model => item.vote_average) (@Html.DisplayFor(model => item.vote_count))</p>
                    </div>
                </div>
            </a>
                    
                                           
                }
            }
        </div>
    </div>

</div>
